{
	"name": "vueformulate-helper",
	"displayName": "Vue Formulate Helper",
	"version": "0.2.5",
	"description": "Vue Formulate vscode snippets",
	"publisher": "tu6ge",
	"license": "MIT",
	"icon": "logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/tu6ge/vueformulate-vscode.git"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:vue"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Vue Formulate Helper Config",
			"properties": {
				"vueformulate-helper.language": {
					"type": "string",
					"default": "zh-CN",
					"description": "Document Language of Vue Formulate",
					"enum": [
						"zh-CN",
						"en-US"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts & prettier -w ./src",
		"test": "node ./out/test/runTest.js",
		"build": "rollup --config ./rollup.config.js",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"commit": "git-cz",
		"docs": "node ./src/document/document-builder.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"commitizen": "^4.2.3",
		"conventional-changelog": "^3.1.24",
		"conventional-changelog-cli": "^2.1.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
